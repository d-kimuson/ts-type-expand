{
  "name": "ts-type-expand",
  "displayName": "ts-type-expand",
  "description": "vscode extension for expand type of typescript",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/d-kimuson/ts-type-expand"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint-staged": "lint-staged --allow-empty -r",
    "prepare": "husky install",
    "deploy": "./bin/deploy.sh"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "yarn eslint --fix",
      "yarn prettier --write"
    ],
    "*.{json,md}": [
      "yarn prettier --write"
    ]
  },
  "devDependencies": {
    "commitizen": "^4.2.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2"
  }
}
