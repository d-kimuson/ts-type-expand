{
  "name": "ts-type-expand-repo",
  "displayName": "ts-type-expand",
  "description": "vscode extension for expand type of typescript",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/d-kimuson/ts-type-expand"
  },
  "private": true,
  "packageManager": "pnpm@8.7.5",
  "engines": {
    "npm": "forbidden, use pnpm",
    "yarn": "forbidden, use pnpm",
    "pnpm": ">=8.7.5",
    "node": ">=20"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/compiler-api-helper",
      "**/compiler-api-helper/**",
      "**/ts-type-expand-plugin",
      "**/ts-type-expand-plugin/**",
      "**/ts-type-expand",
      "**/ts-type-expand/**",
      "**/ts-type-expand-beta",
      "**/ts-type-expand-beta/**",
      "**/example",
      "**/example/**"
    ]
  },
  "scripts": {
    "dev": "run-p dev:*",
    "dev:ts-type-expand": "pnpm --cwd './packages/ts-type-expand' watch",
    "dev:ts-type-expand-plugin": "pnpm --cwd './packages/ts-type-expand-plugin' watch",
    "dev:compiler-api-helper": "pnpm --cwd './packages/compiler-api-helper' dev",
    "build": "run-s build:*",
    "build:compiler-api-helper": "pnpm --cwd './packages/compiler-api-helper' build",
    "build:ts-type-expand-plugin": "pnpm --cwd './packages/ts-type-expand-plugin' build",
    "build:ts-type-expand": "pnpm --cwd './packages/ts-type-expand' build",
    "lint": "run-s lint:*",
    "lint:compiler-api-helper": "pnpm --cwd './packages/compiler-api-helper' lint",
    "lint:ts-type-expand-plugin": "pnpm --cwd './packages/ts-type-expand-plugin' lint",
    "lint:ts-type-expand": "pnpm --cwd './packages/ts-type-expand' lint",
    "fix": "run-s fix:*",
    "fix:compiler-api-helper": "pnpm --cwd './packages/compiler-api-helper' fix",
    "fix:ts-type-expand-plugin": "pnpm --cwd './packages/ts-type-expand-plugin' fix",
    "fix:ts-type-expand": "pnpm --cwd './packages/ts-type-expand' fix",
    "test": "run-s test:*",
    "test:compiler-api-helper": "pnpm --cwd './packages/compiler-api-helper' test",
    "test:ts-type-expand": "pnpm --cwd './packages/ts-type-expand' test:jest",
    "lint-staged": "lint-staged --allow-empty -r",
    "preinstall": "pnpm /^setup:.*/",
    "deploy": "./bin/deploy.sh",
    "refresh:remove": "rm -rf packages/ts-type-expand/out && rm -rf packages/ts-type-expand-plugin/dist/** && rm -rf packages/compiler-api-helper/dist/**",
    "setup:husky": "husky install",
    "setup:check-manager": "npx -y only-allow pnpm"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.6.2",
    "@types/vscode": "1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "glob": "^10.3.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "syncpack": "^11.2.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "tsc-alias": "^1.8.7"
  }
}
