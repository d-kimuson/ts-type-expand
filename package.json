{
  "name": "ts-type-expand",
  "displayName": "ts-type-expand",
  "description": "expand type for typescript",
  "version": "0.0.6",
  "license": "MIT",
  "publisher": "kimuson",
  "repository": {
    "type": "git",
    "url": "https://github.com/d-kimuson/ts-type-expand"
  },
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:typeExpand"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Ts Type Expand",
      "type": "object",
      "properties": {
        "ts-type-expand.tsconfigPath": {
          "type": "string",
          "default": "tsconfig.json",
          "description": "Path to tsconfig.json"
        },
        "ts-type-expand.compactOptionalType": {
          "type": "boolean",
          "default": "true",
          "description": "Fold optional type"
        }
      }
    },
    "commands": [
      {
        "command": "ts-type-expand.refresh",
        "title": "Refresh (ts-type-expand)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "typeExpand",
          "name": "TS Type Expand"
        }
      ]
    }
  },
  "scripts": {
    "ts:run": "ts-node -P ./tsconfig.json -r tsconfig-paths/register",
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "postcompile": "tsc-alias -p ./tsconfig.json",
    "watch": "run-p watch:*",
    "watch:tsc": "yarn compile -watch",
    "watch:alias": "tsc-alias -p ./tsconfig.json -w",
    "typecheck": "tsc --noEmit -p .",
    "lint": "yarn typecheck && run-p lint:*",
    "lint:eslint": "eslint src --ext ts,js",
    "lint:prettier": "prettier '**/*.{ts,js,json,md}' --check",
    "fix": "run-p fix:*",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "prettier '**/*.{ts,js,json,md}' --write",
    "pretest": "yarn run compile && yarn run lint",
    "test:vscode": "node ./out/test/vscode/runTest.js",
    "test:jest": "jest",
    "prepare": "husky install",
    "deploy": "./bin/deploy.sh"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.23",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "glob": "^7.1.6",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "tsc-alias": "^1.2.10",
    "typescript": "^4.2.4"
  }
}
