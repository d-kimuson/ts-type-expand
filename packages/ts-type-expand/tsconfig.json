{
  "compilerOptions": {
    "module": "Node16",
    "target": "es6",
    "outDir": "dist",
    "lib": ["es6"],
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    // temporary
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "noEmit": true,
    "preserveSymlinks": true,
    "moduleResolution": "Node16",
    "noErrorTruncation": true
  },
  "include": ["src", "bin"],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "example",
    "src/test/**/*.test.ts"
  ]
}
