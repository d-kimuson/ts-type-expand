{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",

    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "~/*": ["*"]
    },

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
